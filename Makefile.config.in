VERSION=@PACKAGE_VERSION@
NAME=@PACKAGE_NAME@

CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@
LDFLAGS=@LDFLAGS@

OCAMLFIND=@OCAMLFIND@
DESTDIR =
LIBDIR = $(DESTDIR)/@OCAMLLIB@
BINDIR = $(DESTDIR)/usr/bin
ifeq ($(DESTDIR),)
  INSTALL = $(OCAMLFIND) install
  UNINSTALL = $(OCAMLFIND) remove
else
  INSTALL = $(OCAMLFIND) install -destdir $(LIBDIR)
  UNINSTALL = $(OCAMLFIND) remove -destdir $(LIBDIR)
endif

OCAMLBUILD=@OCAMLBUILD@
#ocamlbest
ifeq ("@OCAMLBEST@","opt")
  OCAMLBEST=native
  OCAMLLIBBEST=cmxa
else
  OCAMLBEST=byte
  OCAMLLIBBEST=cma
endif

TARGETS= \
		 applications/deb-cudf.$(OCAMLBEST) \
		 applications/randcudf.$(OCAMLBEST) \
		 applications/cudf-solver.$(OCAMLBEST) \
		 applications/distcheck.$(OCAMLBEST) \
		 applications/buildcheck.$(OCAMLBEST) \
		 applications/ceve.$(OCAMLBEST) \
		 applications/cudf-diff.$(OCAMLBEST)

LIBS= \
	  common/common.$(OCAMLLIBBEST) \
	  deb/debian.$(OCAMLLIBBEST) \
	  algo/algo.$(OCAMLLIBBEST)

#we always compile bytecode libraries
ifeq ("@OCAMLBEST@","opt")
	LIBS += common/common.cma deb/debian.cma algo/algo.cma
endif

#external libcudf, then we build the check tool in-house
ifeq ("@HAS_LIBCUDF@","no")
  TARGETS += libcudf/main_cudf_check.$(OCAMLBEST)
endif

#database support
ifeq ("@HAS_DB@","yes") 
  TARGETS += applications/db-cudf.$(OCAMLBEST)
  LIBS += db/db.$(OCAMLLIBBEST)
#  TEST_DB=db
endif

ifeq ("@HAS_XML@","yes")
ifeq ("@HAS_CURL@","yes")
  TARGETS += applications/dudftocudf/deb-dudftocudf.$(OCAMLBEST)
endif
endif

#ocamlgraph support
ifeq ("@HAS_OCAMLGRAPH@","yes")
  TARGETS += \
			 applications/rmat.$(OCAMLBEST) \
			 applications/pref-attach.$(OCAMLBEST) \
			 applications/strong-deps.$(OCAMLBEST) \
			 applications/ceve.$(OCAMLBEST)
endif

#rpm support
ifeq ("@HAS_RPM@","yes")
#  TARGETS += applications/rpm-cudf.$(OCAMLBEST)
  LIBS += rpm/rpm.$(OCAMLLIBBEST)
#  TEST_RPM=rpm
endif

#ounit support
ifeq ("@HAS_OUNIT@","yes")
  TESTS= common deb algo $(TEST_DB) $(TEST_RPM)
endif
